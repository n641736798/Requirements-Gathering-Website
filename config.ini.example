; ============================================
; 需求收集网站配置文件示例
; 复制为 config.ini 并修改相应配置
; ============================================

[server]
; 服务监听端口
port = 8080
; 线程池大小：0=禁用（适用于2核2G小服务器），>0=启用
; 2核2G阿里云建议设为 0 以节省内存
thread_pool_size = 0

[mysql]
; MySQL 连接配置
host = 127.0.0.1
port = 3306
user = root
password = your_password
database = requirement_db
; 连接池配置（2核2G 建议较小值）
pool_size_min = 2
pool_size_max = 5
connect_timeout = 5

[storage]
; 存储模式：memory | mysql | hybrid
; memory: 仅内存（开发/测试）
; mysql: 仅 MySQL（生产）
; hybrid: 混合模式
mode = memory
